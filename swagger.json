{
  "swagger": "2.0",
  "info": {
    "title": "Event Planner API",
    "description": "You can see how to add venues and events for your location city.",
    "version": "1.0.0"
  },
  "securityDefinitions": {
    "google_oauth": {
        "type": "oauth2",
        "description": "Google OAuth",
        "authorizationUrl": "https://accounts.google.com/o/oauth2/v2/auth",
        "token Url": "https://www.googleapis.com/oauth2/v4/token",
        "x-tokenName": "id_token",
        "flow": "implicit",
        "scopes": {
            "read:players": "read player data"
        }
    }
},
  "host": "event-planner-cse341.herokuapp.com",
  "basePath": "/",
  "tags": [
    {
        "name": "Users",
        "description": "Operations for Users"
      },
    {
      "name": "Events",
      "description": "Operations for Events"
    },
    {
      "name": "Venues",
      "description": "Operations for Venues"
    }
  ],
  "schemes": ["https"],
  "paths": {
    "/users/": {
        "get": {
            "tags": ["Users"],
            "description": "Returns a Users basic google information.",
            "produces": ["application/json"],
            "responses": {
                "200": {
                    "description": "A player resource.",
                    "schema": {
                        "$ref": "#/definitions/Player"
                    }
                }
            },
            "security": {
                "oauth": ["read:players"]
            }
        },
        "parameters": [{
            "name": "id",
            "in": "path",
            "description": "Identifier of player to retreive",
            "required": true,
            "type": "string"
        }]
    },
"definitions": {
    "Player": {
        "type": "object",
        "properties": {
            "playerId": {
                "type": "string"
            },
            "alias": {
                "type": "string"
            },
            "displayName": {
                "type": "string"
            },
            "profilePhotoUrl": {
                "type": "string"
            }
        },
        "required": ["playerId", "alias"]
    }
},
    "/events/": {
      "get": {
        "tags": ["Events"],
        "description": "Gets all the planned events.",
        "produces": ["application/json"],
        "parameters": [],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      },
      "post": {
        "tags": ["Events"],
        "description": "Creates an event",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "time": {
                  "example": "10:00PM"
                },
                "date": {
                  "example": "01/01/22"
                },
                "venueID": {
                  "example": "venueID"
                },
                "ageGroup": {
                  "example": "Family"
                },
                "food": {
                  "example": "food"
                },
                "sponsor": {
                  "example": "Sponsor"
                },
                "theme": {
                  "example": "theme"
                },
                "cause": {
                  "example": "cause"
                },
                "eventPlanner": {
                  "example": "name"
                }
              }
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Created"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/events/{id}": {
      "put": {
        "tags": ["Events"],
        "description": "Update the information in for an event using ID.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "time": {
                  "example": "10:00PM"
                },
                "date": {
                  "example": "01/01/22"
                },
                "venueID": {
                  "example": "venueID"
                },
                "ageGroup": {
                  "example": "Family"
                },
                "food": {
                  "example": "food"
                },
                "sponsor": {
                  "example": "Sponsor"
                },
                "theme": {
                  "example": "theme"
                },
                "cause": {
                  "example": "cause"
                },
                "eventPlanner": {
                  "example": "name"
                }
              }
            }
          }
        ],
        "responses": {
          "202": {
            "description": "Accepted"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "delete": {
        "tags": ["Events"],
        "description": "Deletes an event using ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "202": {
            "description": "Accepted"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/venues/": {
      "get": {
        "tags": ["Venues"],
        "description": "Gets all Venues",
        "produces": ["application/json"],
        "parameters": [],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      },
      "post": {
        "tags": ["Venues"],
        "description": "Creates a venue",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "address": {
                  "example": "address"
                },
                "locationName": {
                  "example": "location"
                },
                "capacity": {
                  "example": 100
                },
                "indoor": {
                  "example": true
                }
              }
            }
          }
        ],
        "responses": {
          "202": {
            "description": "Accepted"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/venues/{id}": {
      "put": {
        "tags": ["Venues"],
        "description": "Updates a venue using ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "address": {
                  "example": "address"
                },
                "locationName": {
                  "example": "location"
                },
                "capacity": {
                  "example": 100
                },
                "indoor": {
                  "example": true
                }
              }
            }
          }
        ],
        "responses": {
          "202": {
            "description": "Accepted"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "delete": {
        "tags": ["Venues"],
        "description": "Deletes a venue using ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "202": {
            "description": "Accepted"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    }
  }
}
