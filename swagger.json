{
  "swagger": "2.0",
  "info": {
    "title": "Event Planner API",
    "description": "You can see how to add venues and events for your location city.",
    "version": "1.0.0"
  },
  "host": "event-planner-cse341.herokuapp.com",
  "basePath": "/",
  "tags": [
    {
      "name": "Events",
      "description": "Operations for Events"
    },
    {
      "name": "Venues",
      "description": "Operations for Venues"
    }
  ],
  "schemes": [
    "https"
  ],
  "paths": {
    "/events/": {
      "get": {
        "tags": ["Events"],
        "description": "Gets all the planned events.",
        "produces": [
          "application/json"
        ],
        "parameters": [],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      },
      "post": {
        "tags": ["Events"],
        "description": "Creates an event",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "time": {
                  "example": "10:00PM"
                },
                "date": {
                  "example": "01/01/22"
                },
                "venueID": {
                  "example": "venueID"
                },
                "ageGroup": {
                  "example": "Family"
                },
                "food": {
                  "example": "food"
                },
                "sponsor": {
                  "example": "Sponsor"
                },
                "theme": {
                  "example": "theme"
                },
                "cause": {
                  "example": "cause"
                },
                "eventPlanner": {
                  "example": "name"
                }
              }
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Created"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/events/{id}": {
      "put": {
        "tags": ["Events"],
        "description": "Update the information in for an event using ID.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "time": {
                    "example": "10:00PM"
                  },
                  "date": {
                    "example": "01/01/22"
                  },
                  "venueID": {
                    "example": "venueID"
                  },
                  "ageGroup": {
                    "example": "Family"
                  },
                  "food": {
                    "example": "food"
                  },
                  "sponsor": {
                    "example": "Sponsor"
                  },
                  "theme": {
                    "example": "theme"
                  },
                  "cause": {
                    "example": "cause"
                  },
                  "eventPlanner": {
                    "example": "name"
                  }
              }
            }
          }
        ],
        "responses": {
          "202": {
            "description": "Accepted"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "delete": {
        "tags": ["Events"],
        "description": "Deletes an event using ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "202": {
            "description": "Accepted"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/venues/": {
      "get": {
        "tags": ["Venues"],
        "description": "Gets all Venues",
        "produces": [
          "application/json"
        ],
        "parameters": [],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      },
      "post": {
        "tags": ["Venues"],
        "description": "Creates a venue",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "address": {
                  "example": "address"
                },
                "locationName": {
                  "example": "location"
                },
                "capacity": {
                  "example": 100
                },
                "indoor": {
                  "example": true
                }
              }
            }
          }
        ],
        "responses": {
          "202": {
            "description": "Accepted"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/venues/{id}": {
      "put": {
        "tags": ["Venues"],
        "description": "Updates a venue using ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "address": {
                    "example": "address"
                  },
                  "locationName": {
                    "example": "location"
                  },
                  "capacity": {
                    "example": 100
                  },
                  "indoor": {
                    "example": true
                  }
              }
            }
          }
        ],
        "responses": {
          "202": {
            "description": "Accepted"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "delete": {
        "tags": ["Venues"],
        "description": "Deletes a venue using ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "202": {
            "description": "Accepted"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    }
  }
}