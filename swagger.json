{
  "swagger": "2.0",
  "info": {
    "title": "Event Planner API",
    "description": "You can see how to add venues and events for your location city.",
    "version": "1.0.0"
  },
  "securityDefinitions": {
    "google_oauth": {
        "type": "oauth2",
        "description": "Google OAuth",
        "authorizationUrl": "https://accounts.google.com/o/oauth2/v2/auth",
        "flow": "implicit",
        "scopes": {
            "user:read": "read user data"
        }
    }
},
  "host": "event-planner-cse341.herokuapp.com",
  "basePath": "/",
  "tags": [
    {
        "name": "User",
        "description": "Operations for User"   
    },
    {
      "name": "Events",
      "description": "Operations for Events"
    },
    {
      "name": "Venues",
      "description": "Operations for Venues"
    }
  ],
  "schemes": ["https"],
  "paths": {
    "/user/profile":{
        "get": {
            "tags": ["User"],
            "description": "Gets the current uses information from Google",
            "produces": ["application/json"],
            "parameters":[{
                "name":"body",
                "in":"body",
                "schema":{
                    "type":"object",
                    "properties":{
                        "googleId": {
                            "example": "113427959355924570000"
                        },
                        "displayName": {
                            "example": "John Dow"
                        },
                        "firstName": {
                            "example": "John"
                        },
                        "lastName": {
                            "example": "Dow"
                        },
                        "image": {
                            "example": "https://lh3.googleusercontent.com/a/AATXAJwG3ss_kJTdju8PTMhugOZ2t9fNeVgAOH6dIuGQ=s96-c"
                        },
                        "createdAt": {
                            "example": "2022-06-14T20:24:34.594+00:00"
                        }
                    }
                }
        }]

        }

    },
    "/events/": {
      "get": {
        "tags": ["Events"],
        "description": "Gets all the planned events.",
        "produces": ["application/json"],
        "parameters": [],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      },
      "post": {
        "tags": ["Events"],
        "description": "Creates an event",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "time": {
                  "example": "10:00PM"
                },
                "date": {
                  "example": "01/01/22"
                },
                "venueID": {
                  "example": "venueID"
                },
                "ageGroup": {
                  "example": "Family"
                },
                "food": {
                  "example": "food"
                },
                "sponsor": {
                  "example": "Sponsor"
                },
                "theme": {
                  "example": "theme"
                },
                "cause": {
                  "example": "cause"
                },
                "eventPlanner": {
                  "example": "name"
                }
              }
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Created"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/events/{id}": {
      "put": {
        "tags": ["Events"],
        "description": "Update the information in for an event using ID.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "time": {
                  "example": "10:00PM"
                },
                "date": {
                  "example": "01/01/22"
                },
                "venueID": {
                  "example": "venueID"
                },
                "ageGroup": {
                  "example": "Family"
                },
                "food": {
                  "example": "food"
                },
                "sponsor": {
                  "example": "Sponsor"
                },
                "theme": {
                  "example": "theme"
                },
                "cause": {
                  "example": "cause"
                },
                "eventPlanner": {
                  "example": "name"
                }
              }
            }
          }
        ],
        "responses": {
          "202": {
            "description": "Accepted"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "delete": {
        "tags": ["Events"],
        "description": "Deletes an event using ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "202": {
            "description": "Accepted"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/venues/": {
      "get": {
        "tags": ["Venues"],
        "description": "Gets all Venues",
        "produces": ["application/json"],
        "parameters": [],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      },
      "post": {
        "tags": ["Venues"],
        "description": "Creates a venue",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "address": {
                  "example": "address"
                },
                "locationName": {
                  "example": "location"
                },
                "capacity": {
                  "example": 100
                },
                "indoor": {
                  "example": true
                }
              }
            }
          }
        ],
        "responses": {
          "202": {
            "description": "Accepted"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/venues/{id}": {
      "put": {
        "tags": ["Venues"],
        "description": "Updates a venue using ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "address": {
                  "example": "address"
                },
                "locationName": {
                  "example": "location"
                },
                "capacity": {
                  "example": 100
                },
                "indoor": {
                  "example": true
                }
              }
            }
          }
        ],
        "responses": {
          "202": {
            "description": "Accepted"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "delete": {
        "tags": ["Venues"],
        "description": "Deletes a venue using ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "202": {
            "description": "Accepted"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    }
  }
}
